{
    "compilerOptions": {
        "baseUrl": ".",
        "jsx": "react",
        "module": "commonjs",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "paths": {
            "@app/*": [
                "client/*"
            ]
        },
        "strict": true,
        "target": "es2015"
    },
    "include": [
        "client/**/*"
    ]
}